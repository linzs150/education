<resources>

    <!-- Base application theme. -->
<!--    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>


    <style name="AppBaseTheme" parent="android:Theme.Light">

        <item name="android:listDivider">@drawable/list_divider_bg</item>
    </style>

    <style name="AnimationActivity" parent="@android:style/Animation.Translucent">
        <item name="android:activityOpenEnterAnimation">@anim/mgsv_open_left_in</item>
        <item name="android:activityOpenExitAnimation">@anim/mgsv_open_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/mgsv_close_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/mgsv_close_left_out</item>
    </style>

    <style name="AppThemeAni" parent="AppTheme">
        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>
    </style>

    <style name="SplashThem" parent="AppTheme">
        <item name="android:windowBackground">@drawable/boot_bg</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="LayoutLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/color_928d8d</item>
    </style>

    <style name="SeparationLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/px_1</item>
        <item name="android:background">@color/color_bfbebe</item>
    </style>

    <style name="zzCustomDialog_update1" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">true</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:backgroundDimEnabled">true</item><!--模糊-->
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginBottom">30dp</item>
    </style>


    <style name="LoginEditStyle">
        <item name="android:background">@null</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/color_000000</item>
        <item name="android:textColorHint">@color/color_000000</item>
        <item name="android:textCursorDrawable">@drawable/login_cursor</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">true</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:backgroundDimEnabled">true</item><!--模糊-->
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
    </style>


    <style name="SettingCustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">true</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:backgroundDimEnabled">true</item><!--模糊-->
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:layout_marginLeft">23dp</item>
        <item name="android:layout_marginRight">23dp</item>
    </style>

    <style name="PayCustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">true</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:backgroundDimEnabled">true</item><!--模糊-->
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:gravity">bottom</item>
        <item name="android:layout_marginRight">0dp</item>
    </style>
	
	    <style name="ThemeTopStyleBase">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_50</item>
    </style>

    <style name="TopTabTitleBase">
        <item name="android:id">@id/title</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp_21</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:maxWidth">@dimen/dp_200</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TopTabImageButtonBase">
        <item name="android:layout_width">@dimen/dp_50</item>
        <item name="android:layout_height">@dimen/dp_50</item>
        <item name="android:background">@null</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="TopTabImageButtonLeftBase" parent="TopTabImageButtonBase">
        <item name="android:paddingLeft">@dimen/dp_navigate_10</item>
    </style>

    <style name="TopTabImageButtonRightBase" parent="TopTabImageButtonBase">
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="TopTabButtonLeftBase">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/dp_50</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:minWidth">@dimen/dp_50</item>
        <item name="android:paddingLeft">@dimen/dp_10</item>
        <item name="android:textSize">@dimen/dp_14</item>
        <item name="android:background">@null</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="TopTabButtonRightBase">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/dp_55</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:minWidth">@dimen/dp_50</item>
        <item name="android:paddingRight">@dimen/dp_10</item>
        <item name="android:textSize">@dimen/dp_14</item>
        <item name="android:background">@null</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="WhiteThemeTopStyle" parent="ThemeTopStyleBase">
        <item name="android:background">@color/white</item>
    </style>

    <style name="WhiteTopTabTitle" parent="TopTabTitleBase">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="WhiteTopTabImageButtonLeft" parent="TopTabImageButtonLeftBase" />

    <style name="WhiteTopTabImageButtonRight" parent="TopTabImageButtonRightBase" />

    <style name="WhiteTopTabButtonLeft" parent="TopTabButtonLeftBase">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="WhiteTopTabButtonRight" parent="TopTabButtonRightBase">
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- 白色主题END-->

    <style name="VerticalSeparationLine">
        <item name="android:layout_width">@dimen/px_1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/color_bfbebe</item>
    </style>

    <style name="ActionSheet" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowAnimationStyle">@style/ActionSheetAnimation</item>
    </style>


    <style name="ActionSheetAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/push_up_in</item>
        <item name="android:windowExitAnimation">@anim/push_down_out</item>
    </style>
    
    <style name="DialogStyle" parent="@android:style/Theme.Dialog">

        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 浮于Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- Dialog以外的区域模糊效果 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- Dialog进入及退出动画 -->
        <item name="android:windowAnimationStyle">@style/Bottom.Dialog.Animation</item>
    </style>


    <style name="Bottom.Dialog.Animation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_bottom_enter</item>
        <!-- 进入时的动画 -->
        <item name="android:windowExitAnimation">@anim/dialog_bottom_exit</item>
        <!-- 退出时的动画 -->
    </style>

    <style name="MyDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="MyDialog1" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="RatingBar_CustomDrawable" parent="@android:style/Widget.Holo.RatingBar.Indicator">
        <item name="android:progressDrawable">@drawable/star_drawable_layer</item>
        <item name="android:minHeight">9dp</item>
        <item name="android:maxHeight">9dp</item>
    </style>

    <declare-styleable name="MaxHeightRecyclerView">
        <attr name="maxHeight" format="dimension" />
    </declare-styleable>

</resources>
