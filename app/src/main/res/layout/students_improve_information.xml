<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f8f8f8"
    android:orientation="vertical">

    <include layout="@layout/com_activity_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"

                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="left|center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/student_person"
                        android:textColor="@color/color_666666"
                        android:textSize="14sp" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/my_icon"
                        android:layout_width="82dp"
                        android:layout_height="82dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="13dp"
                        android:src="@drawable/btn_add_people" />
                </LinearLayout>

                <com.one.education.widget.RequiredTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:gravity="left|center"
                    android:text="@string/surename"
                    android:textColor="@color/color_666666"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/etSurname"
                    style="@style/LoginEditStyle"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:hint=""
                    android:inputType="text"
                    android:text=""
                    android:textColor="@color/color_000000"
                    android:textSize="14sp" />

                <View style="@style/SeparationLine" />

                <com.one.education.widget.RequiredTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="@string/first_name"
                    android:textColor="@color/color_666666"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/etInputFirst"
                    style="@style/LoginEditStyle"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:hint=""
                    android:inputType="text"
                    android:text=""
                    android:textColor="@color/color_000000"
                    android:textSize="14sp" />

                <View style="@style/LayoutLine" />


                <com.one.education.widget.RequiredTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="@string/date_of_birth"
                    android:textColor="@color/color_666666"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/etInputBirth"
                    style="@style/LoginEditStyle"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:hint=""
                    android:text=""
                    android:textColor="@color/color_000000"
                    android:textSize="14sp" />

                <View style="@style/LayoutLine" />


                <com.one.education.widget.RequiredTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="@string/contact_email_address"
                    android:textColor="@color/color_666666"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/etInputContact"
                    style="@style/LoginEditStyle"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:hint=""
                    android:inputType="text"
                    android:text=""
                    android:textColor="@color/color_000000"
                    android:textSize="14sp" />

                <View style="@style/LayoutLine" />


                <com.one.education.widget.RequiredTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="@string/contact_phone_number"
                    android:textColor="@color/color_666666"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/etInputPhone"
                    style="@style/LoginEditStyle"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:hint=""
                    android:text=""
                    android:textColor="@color/color_000000"
                    android:textSize="14sp" />

                <View style="@style/LayoutLine" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="@string/student_skype"
                    android:textColor="@color/color_666666"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/etInputSkype"
                    style="@style/LoginEditStyle"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:hint=""
                    android:inputType="text"
                    android:text=""
                    android:textColor="@color/color_000000"
                    android:textSize="14sp" />

                <View style="@style/LayoutLine" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="@string/student_wechat"
                    android:textColor="@color/color_666666"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/etInputWechat"
                    style="@style/LoginEditStyle"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:hint=""
                    android:inputType="text"
                    android:text=""
                    android:textColor="@color/color_000000"
                    android:textSize="14sp" />

                <View style="@style/LayoutLine" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/student_id"
                        android:textColor="@color/color_666666"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/tv_student_card"
                        android:layout_width="128dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="15dp"
                        android:visibility="gone"
                         />

                    <LinearLayout
                        android:id="@+id/tv_student_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/btn_add_shape"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50dp"
                            android:layout_marginRight="50dp"
                            android:layout_marginBottom="20dp"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/btn_add_bigger" />

                    </LinearLayout>


                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="@string/name_of_current_school"
                    android:textColor="@color/color_666666"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/etInputSchool"
                    style="@style/LoginEditStyle"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:hint=""
                    android:inputType="text"
                    android:text=""
                    android:textColor="@color/color_000000"
                    android:textSize="14sp" />

                <View style="@style/LayoutLine" />


                <com.one.education.widget.RequiredTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="@string/current_school_year"
                    android:textColor="@color/color_666666"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/etInputCurrent"
                    style="@style/LoginEditStyle"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:hint=""
                    android:text=""
                    android:textColor="@color/color_000000"
                    android:textSize="14sp" />

                <View style="@style/LayoutLine" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="left|center"
                    android:orientation="horizontal">

                    <com.one.education.widget.RequiredTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/gender"
                        android:textColor="@color/color_666666"
                        android:textSize="14sp" />

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/radio_man"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/student_gener_shape"

                            android:button="@null"
                            android:checked="true"
                            android:paddingLeft="15dp"
                            android:paddingTop="7dp"
                            android:paddingRight="15dp"
                            android:paddingBottom="7dp"
                            android:text="@string/male"
                            android:textColor="@color/white" />

                        <RadioButton
                            android:id="@+id/radio_female"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/student_gener_shape"
                            android:button="@null"
                            android:paddingLeft="15dp"
                            android:paddingTop="7dp"
                            android:paddingRight="15dp"
                            android:paddingBottom="7dp"
                            android:text="@string/female"
                            android:textColor="@color/white" />

                    </RadioGroup>

                </LinearLayout>

                <EditText
                    android:id="@+id/etInputGener"
                    style="@style/LoginEditStyle"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:hint="手动输入其他"
                    android:inputType="text"
                    android:textColor="@color/color_000000"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <View
                    style="@style/SeparationLine"
                    android:visibility="gone" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:gravity="left|center"
                    android:orientation="vertical">

                    <com.one.education.widget.RequiredTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/level_of_spoken_english"
                        android:textColor="@color/color_666666"
                        android:textSize="14sp" />

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/radio_basic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/student_gener_shape"
                            android:button="@null"
                            android:checked="true"
                            android:paddingLeft="15dp"
                            android:paddingTop="7dp"
                            android:paddingRight="15dp"
                            android:paddingBottom="7dp"
                            android:text="@string/basic"
                            android:textColor="@color/white" />

                        <RadioButton
                            android:id="@+id/radio_interme"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/student_gener_shape"
                            android:button="@null"
                            android:paddingLeft="15dp"
                            android:paddingTop="7dp"
                            android:paddingRight="15dp"
                            android:paddingBottom="7dp"
                            android:text="@string/intermediate"
                            android:textColor="@color/white" />

                        <RadioButton
                            android:id="@+id/radio_fluent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/student_gener_shape"
                            android:button="@null"
                            android:paddingLeft="15dp"
                            android:paddingTop="7dp"
                            android:paddingRight="15dp"
                            android:paddingBottom="7dp"
                            android:text="@string/fluent"
                            android:textColor="@color/white" />

                    </RadioGroup>

                </LinearLayout>

                <TextView
                    android:id="@+id/iv_next"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginBottom="70dp"
                    android:background="@drawable/logout_shape"
                    android:gravity="center"
                    android:text="@string/next"
                    android:textColor="@color/white"
                    android:textSize="16sp" />


            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>
