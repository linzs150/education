<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fl_show"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/root"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"/>


    <View
        android:id="@+id/view"
        style="@style/LayoutLine"
        android:layout_above="@+id/root"/>

    <LinearLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@color/color_ff002147"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/home_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/home_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/tab_home_choose"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/home_text"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:gravity="top|center"
                android:text="@string/home_page"
                android:textColor="@drawable/tab_text_selector"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/st_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/st_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/tab_st_choose"/>


            </RelativeLayout>

            <TextView
                android:id="@+id/st_text"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:gravity="top|center"
                android:text="@string/book_lessons"
                android:textColor="@drawable/tab_text_selector"
                android:textSize="12sp"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/plan_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/plan_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/tab_plan_choose"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/plan_text"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:layout_marginTop="5dp"
                android:gravity="top|center"
                android:text="@string/class_schedule"
                android:textColor="@drawable/tab_text_selector"
                android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/chat_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/chat_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/tab_chat_choose"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/chat_text"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:gravity="top|center"
                android:text="@string/message"
                android:textColor="@drawable/tab_text_selector"
                android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/my_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/my_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/tab_th_choose"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/my_text"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:gravity="top|center"
                android:text="@string/me"
                android:textColor="@drawable/tab_text_selector"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>


