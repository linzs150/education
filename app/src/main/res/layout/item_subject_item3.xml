<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item3_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="left|center"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cb_subject3"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="@drawable/subject_selector"
            android:button="@null" />

        <TextView
            android:id="@+id/course_name3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text=""
            android:textColor="@color/color_666666"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/choice_layout3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <CheckBox
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="@drawable/subject_selector"
            android:button="@null"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left|bottom"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_subject3"
                    style="@style/LoginEditStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="please specify language"
                    android:textColor="@color/color_666666"
                    android:textColorHint="@color/color_999999"
                    android:textSize="14sp" />

                <View style="@style/SeparationLine" />
            </LinearLayout>

            <RadioGroup
                android:id="@+id/rg_course3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/tv_higher3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/student_gener_shape"
                    android:button="@null"
                    android:paddingLeft="25dp"
                    android:paddingTop="7dp"
                    android:paddingRight="25dp"
                    android:paddingBottom="7dp"
                    android:text="SL"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <RadioButton
                    android:id="@+id/tv_standard3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/student_gener_shape"
                    android:button="@null"
                    android:paddingLeft="25dp"
                    android:paddingTop="7dp"
                    android:paddingRight="25dp"
                    android:paddingBottom="7dp"
                    android:text="HL"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </RadioGroup>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
