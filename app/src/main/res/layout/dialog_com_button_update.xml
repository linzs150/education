<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ll_btns"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="30dp"
              android:orientation="vertical"

    >

    <!--android:background="@drawable/update_shape2"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_btn_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="gone"
            >

            <!--  <Button
                  android:id="@+id/btn_left"
                  style="@style/TextWhiteBg.T7"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:background="@drawable/xml_dialog_item_bottom_left_update"
                  android:gravity="center"
                  android:text=""
                  android:textColor="@color/text_AEB0B8"/>-->

            <Button
                android:id="@+id/btn_left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="7.5dp"
                android:textAllCaps="false"
                android:background="@drawable/dialog_co_loading_seletor"
                android:gravity="center"
                android:paddingBottom="13dp"
                android:paddingTop="13dp"
                android:text="取消"
                android:textColor="#3072f6"
                android:textSize="15sp"
                />


        </LinearLayout>

        <View
            android:id="@+id/v_right_split"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/common_line_gray"
            android:visibility="gone"
            />

        <LinearLayout
            android:id="@+id/ll_btn_middle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="gone"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/btn_middle"
                android:textAllCaps="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/dialog_identity_selector"
                android:gravity="center"
                android:paddingBottom="13dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="13dp"
                android:text=""
                android:textColor="@color/white"
                android:textSize="16sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_btn_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:visibility="gone"
            >

            <!--  <Button
                  android:id="@+id/btn_right"
                  style="@style/TextBlueBg.T2"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:background="@drawable/xml_dialog_item_bottom_right_update"
                  android:gravity="center"
                  android:text=""
                  android:textColor="@color/common_blue"/>-->


            <Button
                android:id="@+id/btn_right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:layout_marginLeft="7.5dp"
                android:background="@drawable/dialog_identity_selector"
                android:gravity="center"
                android:paddingBottom="13dp"
                android:paddingTop="13dp"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="15sp"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>